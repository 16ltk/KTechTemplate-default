@model ShoppingCart

<form method="post">
    <input hidden asp-for="ProductId"/>
        <div class="card container pt-4">
            <div class="nav nav-pills bg-primary ml-0  row" style="border-radius: 5px">
                <div class="col-12 col-md-6 col-sm-4">
                    <h1 class="text-white-50">@Model.Product.Title</h1>
                    <p class="text-warning">by @Model.Product.Author</p>
                </div>
                <div class="col-12 col-md-6 col-sm-4 text-end pt-4">
                    <span class="badge bg-warning pt-2" style="height:30px; width:50%; font-size: 12px">Category | <b>@Model.Product.Category.Name</b></span>
                </div>
            </div>
            <div class="card-body row container">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-8 col-lg-8 col-md-4 col-sm-2">
                            <div class="row pl-2">
                                <h5 class="text-muted">ISBN : @Model.Product.ISBN</h5>
                            </div>
                            <div class="row pl-2">
                                <h5 class="text-muted pb-2">List Price: <strike>@Model.Product.ListPrice.ToString("c")</strike></h5>
                            </div>
                            <div class="row text-center pl-2">
                                <div class="p-1 col-2 bg-light border-bottom">
                                    <div>Quantity</div>
                                </div>
                                <div class="p-1 col-2 bg-light border-bottom">
                                    <div>1-50</div>
                                </div>
                                <div class="p-1 col-2 bg-light border-bottom">
                                    <div>51-100</div>
                                </div>
                                <div class="p-1 col-2 bg-light border-bottom">
                                    <div>100+</div>
                                </div>
                            </div>
                            <div class="row text-center pl-2" style="color:maroon; font-weight:bold">
                                <div class="p-1 col-2 bg-light">
                                    <div>Price</div>
                                </div>
                                <div class="p-1 col-2 bg-light">
                                    <div>@Model.Product.ListPrice.ToString("c")</div>
                                </div>
                                <div class="p-1 col-2 bg-light">
                                    <div>@Model.Product.Price50.ToString("c")</div>
                                </div>
                                <div class="p-1 col-2 bg-light">
                                    <div>@Model.Product.Price100.ToString("c")</div>
                                </div>
                            </div>
                            <div class="row pl-2">
                                <p class="text-secondary">@Model.Product.Description</p>
                            </div>
                            <div class="row pl-2">
                                <div class="col-lg-2 col-md-2 col-sm-2 text-primary"><h4>Count</h4></div>
                                <div class="col-10"><input asp-for="Count" class="form-control"></div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-3 col-md-4 col-sm-3 offset-lg-1 text-center">
                            <img src="~/images/products/@Model.Product.ImageUrl" width="200" height="200"  class="rounded">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <nav class="nav nav-pills bg-primary mb-2">
        <div class="m-1">
            <a asp-controller="Home" asp-action="Index" class="btn btn-sm btn-light"><i class="far fa-arrow-alt-circle-left"></i>BackToHome</a>
        </div>
        <div class="m-1">
            <button type="submit" value="Add to Cart" class="btn btn-sm btn-success">Add to Cart</button>
        </div>
    </nav>
</form>