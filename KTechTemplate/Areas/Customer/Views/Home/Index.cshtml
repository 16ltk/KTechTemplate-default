@model IEnumerable<KTechTemplateDAL.Models.Product>
@{
    ViewData["Title"] = "Home";
}

<div class="container text-center">
    <h5>Welcome to</h5>
    <p class="card-title text-secondary">KTechTemplate App</p>
    <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
        @foreach (var product in Model)
        {
            <div class="col pb-2">
                <div class="card" style="border:1px solid #a71930; border-radius: 5px" >
                    <img src="~/images/products/@product.ImageUrl" class="card-img-top rounded" width="200" height="200"/>
                     <div class="card-body">
                         <div class="pl-1">
                            <p class="card-title h5">@product.Title</p>
                            <p class="card-title text-info">by @product.Author</p>
                        </div>
                        <div class="pl-1">
                            <p>List Price: <strike><b>R @product.ListPrice.ToString("0.00")</b></strike></p>
                        </div>
                        <div class="pl-1">
                            <p>As low as: <b>R @product.Price100.ToString("0.00")</b></p>
                        </div>
                        <div>
                            <a asp-action="Details"  class="btn btn-primary form-control" asp-route-productId="@product.Id">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
