@model IEnumerable<KTechTemplateDAL.Models.Company>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="m-1">
    <h4>List of Companies</h4>
</div>
<nav class="nav nav-pills bg-primary rounded-top">
    <div class="m-1">
        <a asp-controller="Companies" asp-action="Create" style="cursor: pointer;" class="btn btn-sm btn-light"><i class="fa fa-plus"></i> Create</a>
    </div>
</nav>
<table class="table table-sm table-striped table-hover">
    <thead class="bg-light">
        <tr>
            <th class="border-bottom border-info border-top-0">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="border-bottom border-info border-top-0">
                @Html.DisplayNameFor(model => model.StreetAddress)
            </th>
            <th class="border-bottom border-info border-top-0">
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th class="border-bottom border-info border-top-0">
                @Html.DisplayNameFor(model => model.Province)
            </th>
            <th class="border-bottom border-info border-top-0">
                @Html.DisplayNameFor(model => model.PostalCode)
            </th>
            <th class="border-bottom border-info border-top-0">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th class="border-bottom border-info border-top-0"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StreetAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Province)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostalCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    <div class="btn-group-xs float-right" style="white-space:nowrap;">
                        <a asp-controller="Companies" asp-action="Edit" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-smx btn-outline-success removeforprinter"><i class="fa fa-edit"></i>Edit</a>
                        <a asp-controller="Companies" asp-action="Details" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-smx btn-outline-primary removeforprinter"><i class="far fa-file-alt"></i> Details</a>
                        <a asp-controller="Companies" asp-action="Delete" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-smx btn-outline-danger removeforprinter"><i class="fa fa-trash"></i> Delete</a>
                    </div>
                </td>
            </tr>
}
    </tbody>
</table>
