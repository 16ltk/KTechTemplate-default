@model Category

<div class="m-1">
    <h4>Delete Categories</h4> 
</div>
<form asp-action="PostDelete">
    <!--Add hidden value to avoid SQL Update/Delete Errors-->
    <input asp-for="Id" hidden />
    <nav class="nav nav-pills bg-primary mb-2">
        <div class="m-1">
            <button type="submit" class="btn btn-sm btn-light"><i class="fa fa-trash"></i>Delete</button>
        </div>
        <div class="m-1">
            <a asp-controller="Category" asp-action="Index" class="btn btn-sm btn-light"><i class="far fa-arrow-alt-circle-left"></i>Back</a>
        </div>
    </nav>
    <h4 class="pl-2 pt-2">Are you sure you want to Delete this Category?</h4>
    <dl class="row pt-2 pb-2 pl-2">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.DisplayOrder)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.DisplayOrder)
        </dd>
    </dl>
</form>


